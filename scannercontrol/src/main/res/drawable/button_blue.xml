<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D6D7D9" />
            <stroke
                android:width="1dp"
                android:color="#9A9B9C" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#D6D7D9"
                android:endColor="#9A9B9C"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#9A9B9C" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>